{
  "name": "Gerrit Plugin for Gmail",
  "short_name": "Gerrit for Gmail",
  "version": "0.2.6",
  "manifest_version": 2,
  "description": "Extension for adding basic Gerrit integration to Gmail.",
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "content_scripts": [{
    "js": ["js/jquery-1.8.3-min.js", "js/jquery.hashchange.js", "js/jquery.tmpl.js", "js/gmrb.js"],
    "css": ["css/gerrit.css"],
    "matches": ["http://mail.google.com/*", "https://mail.google.com/*"]
  }],
  "page_action": {
    "default_icon": "icons/gerrit.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", "http://mail.google.com/", "https://mail.google.com/", "http://*/", "https://*/"
  ],
  "web_accessible_resources": [
    "icons/gerrit-big.png"
  ]
}