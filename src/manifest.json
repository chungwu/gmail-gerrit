{
  "name": "Gerrit Plugin for Gmail",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Extension for adding basic Gerrit integration to Gmail.",
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "content_scripts": [{
    "js": ["js/jquery.js", "js/jquery.hashchange.js", "js/gmrb.js"],
    "matches": ["http://mail.google.com/*", "https://mail.google.com/*"]
  }],
  "page_action": {
    "default_icon": "icons/gerrit.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", "http://mail.google.com/", "https://mail.google.com/", "http://*/", "https://*/"
  ]
}